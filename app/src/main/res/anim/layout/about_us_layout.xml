<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/lg_signin_ts"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/dwnld_img_H"
            android:layout_height="@dimen/dwnld_img_H"
            android:layout_marginTop="@dimen/margin_20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center"
            android:text="@string/copyright_text"
            android:textColor="@color/chat_bg_color"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:autoLink="web"
            android:gravity="center"
            android:linksClickable="true"
            android:textColor="@color/black"
            android:text="@string/company_web_link"
            android:textColorLink="@color/blue_text"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:autoLink="email"
            android:textColor="@color/black"
            android:text="@string/support_email_address"
            android:textColorLink="@color/blue_text"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>
</RelativeLayout>
