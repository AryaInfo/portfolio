<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/llUserMainRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAppUserProfilePic"
        android:layout_gravity="center"
        android:layout_width="@dimen/nav_header_img_HW"
        android:layout_height="@dimen/nav_header_img_HW"
        android:layout_marginLeft="@dimen/padding_20dp"
        android:layout_marginRight="@dimen/padding_20dp"
        android:src="@mipmap/ic_profile" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/padding_5dp"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_16sp" />

            <TextView
                android:id="@+id/txtUnreadMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/unreadMsgHW"
                android:minWidth="@dimen/unreadMsgHW"
                android:background="@drawable/unread_msg_bg"
                android:gravity="center"
                android:layout_margin="@dimen/padding_5dp"
                android:padding="@dimen/padding_5dp"
                android:singleLine="true"
                android:text="2"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_msg_sender_name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/txtUserNRole"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/content_txt_size"/>
        <TextView
            android:id="@+id/txtCreateDate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="@dimen/padding_10dp"
            android:layout_marginBottom="2dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/txt_size_msg_sender_name" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imvAssignTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/tick"
        android:layout_gravity="center"
        android:visibility="gone"/>
        </LinearLayout>
</LinearLayout>