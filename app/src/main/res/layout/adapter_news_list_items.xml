<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_rectangle"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_selector"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgFav"
                android:layout_width="@dimen/dimen_25"
                android:layout_height="@dimen/dimen_25"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_bookmark_star_active" />


            <TextView
                android:id="@+id/txtNewsPubDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="date"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Title"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/color_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <com.arya.portfolio.custom.JustifyWithMaxLines
                android:id="@+id/txtNewsDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_5"
                android:layout_toLeftOf="@+id/imgNews"
                android:maxLines="4"
                android:padding="@dimen/dimen_5"
                android:text="Details"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_14" />

            <ImageView
                android:id="@+id/imgNews"
                android:layout_width="@dimen/dimen_75"
                android:layout_height="@dimen/dimen_75"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dimen_5"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_news_black" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
