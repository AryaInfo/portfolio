<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray"
        android:fillViewport="true"
        android:padding="@dimen/dimen_8"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtIndustryCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="COMMUNICATION"
                android:textColor="@color/color_dark_gray"
                android:textSize="@dimen/font_16"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imgProductPicS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dimen_200"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_portfolio_black_512" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:padding="@dimen/dimen_5"
                android:background="@drawable/shape_rectangle"
                android:orientation="vertical"
               >

                <com.arya.portfolio.custom.JustifiedTextView
                    android:id="@+id/txtIndustryOverView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/overview"
                    android:textColor="@color/color_dark_black"
                    android:textSize="@dimen/font_14"
                    android:padding="@dimen/dimen_5"
                    android:layout_gravity="left"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/shape_rectangle"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/consulting_solutions"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/font_16"
                    android:textStyle="bold"
                    android:padding="@dimen/dimen_10"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1"
                    android:background="@color/color_light_gray" />


                <LinearLayout
                    android:id="@+id/llIndustry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_10"
                    android:paddingRight="@dimen/dimen_10"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>